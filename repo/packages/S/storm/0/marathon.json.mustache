{
  "id": "storm",
  "cmd": "./bin/run-with-marathon.sh",
  "cpus": 1.0,
  "mem": 1024,
  "ports": [0, 1],
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.storm-docker}}",
      "network": "HOST",
      "forcePullImage":true
    }
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "portIndex": 0,
    "path": "/",
    "gracePeriodSeconds": 30,
    "intervalSeconds": 20,
    "maxConsecutiveFailures": 3
  }],
  "user":"{{storm.user}}"
}
